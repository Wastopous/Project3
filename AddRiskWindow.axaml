<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
        x:Class="Project3.AddRiskWindow"
        Title="EditWindow"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        IsHitTestVisible="True"
        CanResize="False"
        Width="400"
        Height="450">
        <Grid Background="Black">
                <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="LightGreen" FontFamily="Times New Roman" FontSize="20" >Добавить новый риск </TextBlock>
                <TextBox Margin="0 0 0 300" Height="10" Watermark = "Новый ID" ></TextBox>
        </Grid>
        
</Window>
